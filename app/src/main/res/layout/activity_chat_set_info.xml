<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_info_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".chat.ChatSetInfoActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="채팅방 정보"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_file"
            android:drawablePadding="8dp"
            android:letterSpacing="0.2"
            android:padding="8dp"
            android:text="파일"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/picture"
            android:drawablePadding="8dp"
            android:letterSpacing="0.2"
            android:padding="8dp"
            android:text="사진"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"/>
        <TextView
            android:id="@+id/vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_vote"
            android:drawablePadding="8dp"
            android:letterSpacing="0.2"
            android:padding="8dp"
            android:text="투표"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/plus_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="대화멤버"
            android:drawableRight="@drawable/ic_add_circle_black_24dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/peopleinfo_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:paddingStart="5dp"
            android:layout_below="@+id/plus_ps"
            android:layout_above="@+id/out"/>
        <TextView
            android:id="@+id/out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나가기"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"/>
    </RelativeLayout>
</LinearLayout>